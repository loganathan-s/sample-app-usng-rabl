<%= form_for(@blog_entry) do |f| %>
  <% if @blog_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog_entry.errors.count, "error") %> prohibited this blog_entry from being saved:</h2>

      <ul>
        <% @blog_entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>


  <h3>Category</h3>
  <%=  link_to "Creat New category",new_blog_category_path %>
  <div class="field">

    <% current_user.blog_categories.each do |category| %>
      <li>
        <div>
          <%= check_box_tag "blog_entry[blog_category_ids][]", category.id, @blog_entry.blog_categories.include?(category) %>
          <%= category.name %>
        </div>
      </li>
    <% end %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
